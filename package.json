{
  "name": "nocss-framework",
  "version": "0.1.1",
  "description": "A classless CSS framework that styles semantic HTML intelligently using CSS selectors and contextual detection",
  "main": "dist/nocss.min.css",
  "style": "dist/nocss.css",
  "files": [
    "dist/nocss.css",
    "dist/nocss.min.css",
    "dist/nocss.js",
    "dist/component-loader.js",
    "src/**/*.css",
    "src/**/*.js",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "npm run build:css && npm run build:js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "postcss src/nocss.css -o dist/nocss.css && postcss src/nocss.css -o dist/nocss.min.css --env production",
    "build:js": "cp src/nocss.js dist/nocss.js && cp src/component-loader.js dist/component-loader.js",
    "serve": "serve . -p 8080 --single",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dathims/nocss.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "homepage": "https://dathims.github.io/nocss",
  "bugs": {
    "url": "https://github.com/dathims/nocss/issues"
  },
  "keywords": [
    "css",
    "framework",
    "classless",
    "no-classes",
    "semantic-html",
    "mobile-first",
    "responsive",
    "dark-mode",
    "accessible",
    "modern-css",
    "has-selector",
    "contextual-styling",
    "zero-classes",
    "semantic-css"
  ],
  "author": "dathims",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.1",
    "postcss-nesting": "^12.0.1",
    "serve": "^14.2.1"
  }
}
